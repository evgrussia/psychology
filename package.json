{
  "name": "psychology",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:e2e": "concurrently \"pnpm --filter @psychology/api dev\" \"pnpm --filter @psychology/web dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:api": "cd apps/api && pnpm test",
    "test:api:e2e": "cd apps/api && pnpm jest --config ./jest-e2e.json --runInBand",
    "test:web": "cd apps/web && pnpm test",
    "test:web:e2e": "cd apps/web && pnpm e2e",
    "test:infra:up": "docker compose -f docker compose.test.yml up -d",
    "test:infra:down": "docker compose -f docker compose.test.yml down",
    "test:full": "pnpm test:infra:up && pnpm test && pnpm test:api:e2e && pnpm test:web:e2e && pnpm test:infra:down",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
