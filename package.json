{
  "name": "psychology",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:e2e": "concurrently \"pnpm --filter @psychology/api dev\" \"pnpm --filter @psychology/web dev\"",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter @psychology/api test",
    "test:api:e2e": "pnpm --filter @psychology/api test:e2e --runInBand",
    "test:web": "pnpm --filter @psychology/web test",
    "test:web:e2e": "pnpm --filter @psychology/web e2e",
    "test:api:seed": "cd apps/api && npx prisma db seed",
    "test:infra:up": "docker compose -f docker-compose.test.yml up -d",
    "test:infra:down": "docker compose -f docker-compose.test.yml down",
    "test:full": "pnpm test:infra:up && cd apps/api && npx prisma migrate deploy && cd ../.. && pnpm test:api && pnpm test:api:e2e && pnpm test:api:seed && pnpm test:web && pnpm test:web:e2e && pnpm test:infra:down",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.2.0",
      "@types/react-dom": "18.2.0"
    }
  }
}
